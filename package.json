{
  "name": "sendero-quotes",
  "version": "0.0.0-development",
  "description": "Get random quotes from the book El sendero de la mano izquierda",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jpcano/sendero-quotes.git"
  },
  "keywords": [
    "random",
    "sendero",
    "drago"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Jesus Cano <jcanovel@gmail.com> (http://jesus.engineer/)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jpcano/sendero-quotes/issues"
  },
  "homepage": "https://github.com/jpcano/sendero-quotes#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.24.1",
    "chai": "4.0.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.4.2",
    "nyc": "11.0.3",
    "rimraf": "2.6.1",
    "semantic-release": "^6.3.6"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
