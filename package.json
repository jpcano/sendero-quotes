{
  "name": "sendero-quotes",
  "version": "0.0.0-development",
  "description": "Get random quotes from the book El sendero de la mano izquierda",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/index.test.js -w",
    "test:single": "istanbul cover -x src/*.test.js _mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jpcano/sendero-quotes.git"
  },
  "keywords": [
    "random",
    "sendero",
    "drago"
  ],
  "author": "Jesus Cano <jcanovel@gmail.com> (http://jesus.engineer/)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jpcano/sendero-quotes/issues"
  },
  "homepage": "https://github.com/jpcano/sendero-quotes#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.0.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.4.2",
    "semantic-release": "^6.3.6"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
